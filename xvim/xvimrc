" XVim Configuration File

" Basic settings
set ignorecase
set smartcase
set incsearch
set wrapscan
set clipboard=unnamed
set number
set hlsearch

" Tab settings
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4

" Key mappings
noremap ; :
noremap j gj
noremap k gk

" Shortcuts
noremap <C-j> <C-d>
noremap <C-k> <C-u>
noremap <C-h> ^
noremap <C-l> $

" Easier window navigation
noremap <C-w>h <C-w>h
noremap <C-w>j <C-w>j
noremap <C-w>k <C-w>k
noremap <C-w>l <C-w>l

" Experimental settings for improved navigation
set timeout
set timeoutlen=1000
set ttimeoutlen=0

" Make yank/paste operations smoother
set clipboard+=unnamedplus

" Allow cursor to move to EOL
set virtualedit=onemore 